#!/usr/bin/python

from scapy.all import *

def Reply(pkt):
    if pkt[ICMP].type == 8 and pkt[ICMP].load == "forger c full faf":
	src = pkt.sprintf("%IP.src%")
        print "[+]reply to " + src
	sendp(IP(dst=src)/ICMP()/Raw(load="Good Job"))


sniff(iface="wlan0", filter="icmp",prn=Reply)


